{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@components/*": ["./components/*"],
      "@hooks": ["./hooks"],
      "@navigation": ["./navigation"],
      "@redux/*": ["./redux/*"],
      "@screens": ["./screens"],
      "@utils": ["./utils"]
    }
  },
  "exclude": ["node_modules"]
}
